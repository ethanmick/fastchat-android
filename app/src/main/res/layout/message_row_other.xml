<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:layout_marginRight="5dp"
>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/user_name"
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:text="jared_babby"
            android:ellipsize="middle"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/avatar"
            android:src="@drawable/profile_dark"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:autoLink="web"
            android:text="I'm adding some nice time stamps, just for you bro"
            android:textSize="14sp"
            android:textColor="#000000"

            android:padding="5dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="30dp"
            />

        <ImageView
            android:id="@+id/message_media"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5sp"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/message_time_stamp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Sep 19, 11:33"
            android:textSize="8sp"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="30dp"
            />

        </LinearLayout>



</LinearLayout>
